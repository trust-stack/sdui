{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "header": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "subHeader": {
                    "type": "string"
                }
            },
            "required": [
                "title"
            ]
        },
        "sections": {
            "type": "array",
            "items": {
                "$ref": "form-section.json"
            }
        },
        "validation": {
            "$ref": "form-validation.json"
        }
    },
    "required": [
        "header",
        "sections",
        "validation"
    ]
}

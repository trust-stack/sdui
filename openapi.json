  "info": {
    "title": "Server Driven UI",
    "description": "Server Driven UI Resolver",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "Header": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the header"
          },
          "subtitle": {
            "type": "string",
            "description": "The subtitle of the header"
          },
          "size": {
            "type": "string",
            "description": "The size of the header",
            "enum": [
              "small",
              "medium",
              "large"
            ],
            "default": "small"
          }
        },
        "required": [
          "title",
          "size"
        ]
      },
      "SelectOption": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "The label of the select option"
          },
          "value": {
            "type": "string",
            "description": "The value of the select option"
          }
        },
        "required": [
          "label",
          "value"
        ]
      },
      "Select": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "The label of the select component"
          },
          "options": {
            "description": "The options of the select component",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SelectOption"
            }
          }
        },
        "required": [
          "label",
          "options"
        ]
      },
      "ToggleOption": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "The label of the toggle option"
          },
          "value": {
            "type": "string",
            "description": "The value of the select option"
          }
        },
        "required": [
          "label",
          "value"
        ]
      },
      "FormToggle": {
        "type": "object",
        "properties": {
          "options": {
            "description": "The options of the toggle component",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ToggleOption"
            }
          },
          "conditionalItems": {
            "description": "Form items to conditionally display based on a toggle option value",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "options"
        ]
      },
      "FormItem": {
        "type": "object",
        "properties": {
          "expanded": {
            "type": "number",
            "description": "The number of grid columns this component takes up in expanded view",
            "default": 12
          },
          "compact": {
            "type": "number",
            "description": "The number of grid columns this component takes up in compact view",
            "default": 12
          },
          "type": {
            "type": "string",
            "description": "The component type of form item",
            "enum": [
              "DATE_TIME_PICKER",
              "NUMERICAL_INPUT",
              "SELECT",
              "SUB_HEADER",
              "TEXT_INPUT",
              "TOGGLE"
            ]
          },
          "validationId": {
            "type": "string",
            "description": "The validation ID for this form item"
          },
          "subHeader": {
            "type": "string",
            "description": "Sub-header text"
          },
          "inputLabel": {
            "type": "string",
            "description": "Input label for form item"
          },
          "select": {
            "description": "Select component configuration",
            "allOf": [
              {
                "$ref": "#/components/schemas/Select"
              }
            ]
          },
          "toggle": {
            "description": "Toggle component configuration",
            "allOf": [
              {
                "$ref": "#/components/schemas/FormToggle"
              }
            ]
          }
        },
        "required": [
          "expanded",
          "compact",
          "type"
        ]
      },
      "FormSection": {
        "type": "object",
        "properties": {
          "validationId": {
            "type": "string",
            "description": "The validation ID for this form section"
          },
          "title": {
            "type": "string",
            "description": "The title of the form section"
          },
          "items": {
            "description": "The form items in this section",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FormItem"
            }
          }
        },
        "required": [
          "validationId",
          "title",
          "items"
        ]
      },
      "Form": {
        "type": "object",
        "properties": {
          "header": {
            "description": "The form header configuration",
            "allOf": [
              {
                "$ref": "#/components/schemas/Header"
              }
            ]
          },
          "sections": {
            "description": "The form sections",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FormSection"
            }
          },
          "validation": {
            "type": "object",
            "description": "The form validation configuration"
          }
        },
        "required": [
          "header",
          "sections",
          "validation"
        ]
      }
    }
  }
}